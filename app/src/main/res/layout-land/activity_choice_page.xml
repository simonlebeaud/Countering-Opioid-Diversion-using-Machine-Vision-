<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityChoicePage">

    <ImageView
        android:id="@+id/ProfileView"
        android:layout_width="177dp"
        android:layout_height="143dp"
        app:layout_constraintBottom_toTopOf="@+id/RunButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.44"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NameView"
        app:layout_constraintVertical_bias="0.346"
        tools:srcCompat="@tools:sample/avatars" />


    <Button
        android:id="@+id/RunButton"
        android:layout_width="402dp"
        android:layout_height="71dp"
        android:layout_marginBottom="16dp"
        android:text="Run the detection"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.435"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/NameView"
        android:layout_width="426dp"
        android:layout_height="98dp"
        android:layout_marginTop="4dp"
        android:textColor="#020304"
        android:gravity="center"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.434"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floating_action_button"
        android:onClick="ChangeProfileImage"
        android:layout_width="26dp"
        android:layout_height="25dp"
        android:layout_gravity="bottom|right"
        app:backgroundTint="@color/colorGrey"
        app:fabCustomSize="24dp"
        app:fabSize="mini"


        app:layout_constraintBottom_toBottomOf="@+id/ProfileView"
        app:layout_constraintEnd_toEndOf="@+id/ProfileView"
        app:srcCompat="@android:drawable/ic_menu_add" />


</androidx.constraintlayout.widget.ConstraintLayout>